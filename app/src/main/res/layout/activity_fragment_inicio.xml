<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGris"
    android:orientation="vertical"
    tools:context="com.tallerandroid.netgreen.FragmentInicio">

    <Spinner
        android:id="@+id/spinnerCategorias_Inicio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/cardview_light_background"
        android:focusable="true" />

    <Spinner
        android:id="@+id/spinnerSubCategorias_Inicio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/cardview_light_background" />

    <ListView
        android:id="@+id/lvInicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@color/cardview_light_background"
        android:dividerHeight="16dp"></ListView>

    <android.support.v7.widget.CardView
        android:id="@+id/loadListView_inicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/cardview_default_elevation"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/ic_vacio_x" />

        <TextView
            android:id="@+id/emptyListView_perfil_actividades"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:text="Sin resultados"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>

    </android.support.v7.widget.CardView>


</LinearLayout>