<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGris"
    android:orientation="vertical"
    tools:context="com.tallerandroid.netgreen.FragmentInicio">

    <Spinner
        android:id="@+id/spinnerCategorias_Inicio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@color/cardview_light_background"
        android:focusable="true" />

    <Spinner
        android:id="@+id/spinnerSubCategorias_Inicio"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:background="@color/cardview_light_background" />

    <ListView
        android:id="@+id/lvInicio"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:background="@color/cardview_light_background"
        android:dividerHeight="16dp"></ListView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/cardview_default_elevation"
        app:cardBackgroundColor="@color/colorGris">

        <TextView
            android:id="@+id/loadListView_inicio"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Cargando datos"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>
    </android.support.v7.widget.CardView>


</LinearLayout>