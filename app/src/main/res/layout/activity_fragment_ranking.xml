<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGris"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.tallerandroid.netgreen.FragmentRanking">

    <ListView
        android:id="@+id/lvRanking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="16dp"></ListView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/cardview_default_elevation">

        <TextView
            android:id="@+id/loadListView_ranking"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:text="Cargando datos"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/cardview_default_elevation">

        <TextView
            android:id="@+id/emptyListView_ranking"
            android:layout_width="match_parent"
            android:layout_height="111dp"
            android:layout_marginTop="20dp"
            android:text="No hay datos"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>
    </android.support.v7.widget.CardView>

</LinearLayout>