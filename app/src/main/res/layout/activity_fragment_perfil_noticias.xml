<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tallerandroid.netgreen.FragmentPerfilActividades">

    <ListView
        android:id="@+id/lvNoticias_Perfil"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dividerHeight="16dp"></ListView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:elevation="@dimen/cardview_default_elevation">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="111dp"
            android:layout_height="111dp"
            android:layout_marginLeft="125dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/ic_vacio_x" />

        <TextView
            android:id="@+id/emptyListView_perfil_noticias"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200dp"
            android:text="Vacio"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textColor="@color/cardview_shadow_start_color"
            android:textSize="18sp"
            android:textStyle="bold"
            android:visibility="gone"></TextView>

    </android.support.v7.widget.CardView>

</LinearLayout>