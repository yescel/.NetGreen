<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.tallerandroid.netgreen.FragmentPerfil">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:weightSum="1">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="219dp">

            <android.support.v7.widget.CardView
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="135dp">

                    <TextView
                        android:id="@+id/tvInformacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="Informacion"
                        android:textSize="18sp"
                        android:fontFamily="monospace"
                        android:textColor="@android:color/black" />

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="28dp">

                        <TextView
                            android:text="Nombre:"
                            android:layout_width="97dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvNomUsu" />

                        <TextView
                            android:text="nombre del usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvNombreUsuario"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="27dp">

                        <TextView
                            android:text="Email:"
                            android:layout_width="97dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEmUsu" />

                        <TextView
                            android:text="email del usuario"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvEmailUsuario"
                            android:layout_weight="1" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="35dp">

                        <TextView
                            android:text="Organismo*:"
                            android:layout_width="97dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvOrg" />

                        <TextView
                            android:text="nombre de organismo perteneciente*"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/tvOrganismo"
                            android:layout_weight="1" />
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>



        </RelativeLayout>

    </LinearLayout>
</FrameLayout>