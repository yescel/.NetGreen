<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.tallerandroid.netgreen.FragmentCrearAct">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerCategorias_CrearAct"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.44" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinnerSubCategorias_CrearAct"
                    android:layout_width="259dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etNombreCreAct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Nombre de actividad"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="1">

                <EditText
                    android:id="@+id/etDescripcionCreAct"
                    android:layout_width="match_parent"
                    android:layout_height="136dp"
                    android:ems="10"
                    android:hint="DescripciÃ³n de la actividad"
                    android:inputType="textMultiLine" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">

                    <EditText
                        android:id="@+id/etFechaCreAct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="yyyy-mm-dd"
                        android:inputType="date" />

                    <EditText
                        android:id="@+id/etHoraCreAct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        android:hint="hh:mm"
                        android:inputType="time" />

                </LinearLayout>

                <DatePicker
                    android:id="@+id/dtFechaActividad"
                    android:layout_width="match_parent"
                    android:layout_height="380dp"
                    android:layout_weight="9.29" />

                <TimePicker
                    android:id="@+id/tmHoraActividad"
                    android:layout_width="match_parent"
                    android:layout_height="380dp" />

                <Button
                    android:id="@+id/btnRegistrarActividad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.00"
                    android:background="@drawable/boton_pulsado"
                    android:text="Registrar"
                    android:textColor="@color/cardview_light_background" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>