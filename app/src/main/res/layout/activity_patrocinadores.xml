<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PatrocinadoresActivity"
    android:weightSum="1">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="0.03"
        android:orientation="horizontal">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            android:visibility="visible">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patrocinadores"
                android:textAlignment="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="20sp"
                android:textStyle="bold" />
        </android.support.v7.widget.Toolbar>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUsuario"
            android:layout_width="56dp"
            android:layout_height="match_parent"
            android:background="@android:drawable/btn_star_big_on" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvOrganismoPat"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="Hegarss Soluciones en Sistemas S. de R.L."
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvContactoPat2"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:text="ggarza@hegarss.com" />

            <TextView
                android:id="@+id/tvTelefonoPat"
                android:layout_width="306dp"
                android:layout_height="match_parent"
                android:text="0448671413487" />


        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivUsuario6"
            android:layout_width="56dp"
            android:layout_height="46dp"
            android:background="@android:drawable/btn_star_big_on" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvOrganismoPat3"
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:text="Instituto TecnolÃ³gico de Nuevo Laredo"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvContactoPat4"
                android:layout_width="312dp"
                android:layout_height="wrap_content"
                android:text="13100220@itnuevolaredo.edu.mx" />

            <TextView
                android:id="@+id/tvTelefonoPat5"
                android:layout_width="306dp"
                android:layout_height="match_parent"
                android:text="0448671413487" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>