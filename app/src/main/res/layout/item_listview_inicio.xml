<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="57dp"
        android:layout_height="111dp"
        app:srcCompat="@android:drawable/ic_input_add"
        android:id="@+id/ivUsuario" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="109dp">

        <TextView
            android:id="@+id/tvUsuario_Inicio"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:text="Usuario" />
        <TextView
            android:id="@+id/tvFechaPublicacion_Inicio"
            android:text="Fecha"
            android:textStyle="bold"
            android:layout_width="290dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvPublicacion_Inicio"
            android:text="Nombre publicacion"
            android:textStyle="bold"
            android:layout_width="290dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tvDescripcion_Inicio"
            android:text="Descripcion"
            android:textStyle="bold"
            android:layout_width="290dp"
            android:layout_height="wrap_content" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvVerMas_Inicio"
                android:layout_width="290dp"
                android:layout_height="20dp"
                android:text="Ver mas..."
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>
